<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span8">
      <h2>kTweet Feed</h2>
      <%= render 'shared/feed' %>
    </div>  
  </div>  
  <% else %>
<h1>kTweet!</h1>
<p>
  This is the home page for kTweet!
  <a href="http://smooth-mountain-9532.herokuapp.com">kTweet! Home</a>
</p>

<%= link_to "Sign up now!", signup_path, class: "signup_button round" %>
<% end %>
